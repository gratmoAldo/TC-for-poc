<% form_for(@service_request) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :sr_number %><br />
    <%= f.text_field :sr_number %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :severity %><br />
    <%= f.text_field :severity %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :product %><br />
    <%= f.text_field :product %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :next_action_at %><br />
    <%= f.datetime_select :next_action_at %>
  </p>
  <p>
    <%= f.label :site_id %><br />
    <%= f.text_field :site_id %>
  </p>
  <p>
    <%= f.label :contact_id %><br />
    <%= f.select :contact_id, User.active.collect{|u| [ u.fullname, u.id] } %>
  </p>
  <p>
    <%= f.label :escalation_id %><br />
    <%= f.text_field :escalation_id %>
  </p>
  <p>
    <%= f.label :owner_id %><br />
    <%= f.select :owner_id, User.active.collect{|u| [ u.fullname, u.id] } %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
