<% title "Bookmarks" %>
<div class='first-pane'>
<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Note</th>
    <th>Is Private</th>
  </tr>
  <% for bookmark in @bookmarks %>
    <tr>
      <td><%=h bookmark.user.fullname %></td>
      <td>[<%= bookmark.asset_id %>] <%= link_to bookmark.title, asset_path(bookmark.asset_id) %></td>
      <td><%=h bookmark.note %></td>
      <td><%=h bookmark.is_private %></td>
      <td><%= link_to "Show", bookmark %></td>
      <td><%= link_to "Edit", edit_bookmark_path(bookmark) %></td>
      <td><%= link_to "Destroy", bookmark, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<hr noshade/>
<%= will_paginate @bookmarks %>

<p><%= link_to "New Bookmark", new_bookmark_path %></p>
<%= render '/utils/debug' %>
</div>