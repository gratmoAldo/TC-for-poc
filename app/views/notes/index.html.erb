<h1>Listing notes</h1>

<table>
  <tr>
    <th>Sr</th>
    <th>Created by</th>
    <th>Visibility</th>
    <th>Effort minutes</th>
    <th>Note type</th>
    <th>Body</th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%=h note.service_request_id %></td>
    <td><%=h note.created_by %></td>
    <td><%=h note.visibility %></td>
    <td><%=h note.effort_minutes %></td>
    <td><%=h note.note_type %></td>
    <td><%=h note.body %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

