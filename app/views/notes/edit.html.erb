<h1>Editing note</h1>

<% form_for(@note) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :sr_id %><br />
    <%= f.text_field :sr_id %>
  </p>
  <p>
    <%= f.label :created_by %><br />
    <%= f.text_field :created_by %>
  </p>
  <p>
    <%= f.label :visibility %><br />
    <%= f.text_field :visibility %>
  </p>
  <p>
    <%= f.label :effort_minutes %><br />
    <%= f.text_field :effort_minutes %>
  </p>
  <p>
    <%= f.label :note_type %><br />
    <%= f.text_field :note_type %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @note %> |
<%= link_to 'Back', notes_path %>