<% title "Bookmarks" %>
<div class='first-pane'>
<table>
  <tr>
    <th>Title</th>
    <th>Is Private</th>
  </tr>
  <% for bookmark in @bookmarks %>
    <tr>
      <td>[<%= bookmark.asset_id %>] <%= link_to truncate(bookmark.title, :length => 80), asset_path(bookmark.asset_id) %> (<%= bookmark.asset.bookmarks_count %>)<br>
	<small class='details'><%= bookmark.created_at.strftime("%m/%d/%Y at %I:%M %p") %> | <%= truncate(bookmark.note, :length => 64) %></small>
	</td>
      <td><%=h bookmark.is_private %></td>
      <td><%= link_to "Show", bookmark %></td>
      <td><%= link_to "Edit", edit_bookmark_path(bookmark) %></td>
      <td><%= link_to "Destroy", bookmark, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<hr noshade/>
<%= will_paginate @bookmarks %>

<p><%= link_to "New Bookmark", new_bookmark_path %></p>
<%= render '/utils/debug' %>
</div>