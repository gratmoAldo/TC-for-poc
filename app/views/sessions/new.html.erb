<% title "Log in" %>
<div class='first-pane'>
<center><div id='login_form'><% form_tag sessions_path do %>
	<table cellspacing=5>
		<tr>
			<td><strong><%= label_tag :login, "Username or Email Address" %></strong></td>
			<td><%= text_field_tag :login, params[:login], :size => 35, :maxlength => 128 %></td>
		</tr>	
		<tr>
			<td><strong><%= label_tag :password %></strong></td>
			<td><%= password_field_tag :password, '', :size => 35, :maxlength => 128  %></td>
		</tr>	
		<tr>
			<td></td>
			<td><button class="submit" type="submit"><span>Log In</span></button> or <%= link_to "Sign up!", signup_path %></td>
		</tr>	
	</table>
	<% end %>
</div>
</center></div>
<div class='pane'>
<% unless @active_admins.blank? %>
<h2>Administrators</h2>
<p>
	| <% for user in @active_admins %>
	<%= link_to_function user.username, "populate_login(this);" %> <span class='details'>(<%=h user.locale %>)</span> |
	<% end %> 
</p>
<% end %>
<% unless @active_users.blank? %>
<p>
	<h2>Active Users</h2>
	| <% for user in @active_users %>
	<%= link_to_function user.username, "populate_login(this);" %> <span class='details'>(<%=h user.locale %>)</span> |
	<% end %>
</p>
<% end %>
<%= will_paginate @active_users %>
</div>
