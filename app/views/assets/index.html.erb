<% title "Assets" %>
<div class='first-pane'>
	<div id='graph' style='width:960px; height:180px;'></div>
</div>	
<div class='pane'>
	<div id="assets">
	<%= render 'assets' %>
	<div><p>
	<%= link_to "Expire Cache", expire_path %> |
	<%= link_to "Nayworker Documentation", documentation_path("Nayworker") %>
	</p></div>
</div>
<%= render '/utils/debug' %>
<% javascript "assets" %>
<script type="text/javascript" charset="utf-8">
var admin=<%= admin? %>;
$(function() {
	new Highcharts.Chart({
		chart: {
			renderTo: 'graph',
			defaultSeriesType: 'line',
			marginBottom: 35		},
		title: {
			text: 'Asset Popularity'
		},
		subtitle: {
			text: 'Sample charting in javascript'
		},
		colors: [ 
			'#5D6A84', 
			'#AA4643', 
			'#89A54E', 
			'#80699B', 
			'#3D96AE', 
			'#DB843D', 
			'#92A8CD', 
			'#A47D7C', 
			'#B5CA92'
		],
		xAxis: {
			categories: <%= @assets.map(&:xid).inspect %>
		},
		yAxis: {
			title: {
				text: 'Index'
			}
		},
		legend: {
							enabled: false
		},
		plotOptions: {
			line: {
				dataLabels: {
					enabled: true
				},
				enableMouseTracking: true
			}
		},
		tooltip: {
			enabled: true,
			formatter: function() {
				return 'Popularity '+this.y;
			}	
		},
		series: [{
			data: <%= @assets.map(&:popularity).inspect %>
			}]
		});
	});
</script>
</div>